<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgpitch"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:contentDescription="@string/san"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/imageDatsan"
                        android:layout_width="48dp"
                        android:layout_height="29dp"
                        android:contentDescription="@string/san"
                        app:srcCompat="@drawable/datsan" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="38dp"
                        android:layout_height="36dp"
                        android:contentDescription="@string/san"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/share" />

                    <ImageView
                        android:id="@+id/imageVitri"
                        android:layout_width="40dp"
                        android:layout_height="29dp"
                        android:contentDescription="@string/san"
                        app:srcCompat="@drawable/send" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="38dp"
                        android:layout_height="36dp"
                        android:contentDescription="@string/san"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/warning" />

                    <ImageView
                        android:id="@+id/imageChiase"
                        android:layout_width="38dp"
                        android:layout_height="29dp"
                        android:contentDescription="@string/san"
                        app:srcCompat="@drawable/share" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="38dp"
                        android:layout_height="36dp"
                        android:contentDescription="@string/san"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/warning" />

                    <ImageView
                        android:id="@+id/imageBaocao"
                        android:layout_width="38dp"
                        android:layout_height="29dp"
                        android:contentDescription="@string/san"
                        app:srcCompat="@drawable/warning" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/datsan"
                        style="@style/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/datsan" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/vitri"
                        style="@style/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/vitri" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/chiase"
                        style="@style/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/chiase" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/baoloi"
                        style="@style/Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/baoloi" />
                </TableRow>

                <TableRow
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#A4A4A4"
                    android:gravity="center">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_span="2"
                        android:text=""></TextView>
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:shrinkColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvpname"
                    style="@style/Head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_span="3"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="1dp">

                <ImageView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/address" />

                <TextView
                    android:id="@+id/tvadd"
                    style="@style/info"
                    android:layout_width="324dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/phone"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/san"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:id="@+id/tvphone"
                    style="@style/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/time"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/san"
                    app:srcCompat="@drawable/clock" />

                <TextView
                    android:id="@+id/tvtime"
                    style="@style/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#A4A4A4"
                android:gravity="center">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text=""></TextView>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imgad1"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/san"
                    app:srcCompat="@drawable/circelwarning" />

                <TextView
                    android:id="@+id/tvad1"
                    style="@style/advance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imgad2"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/san"
                    app:srcCompat="@drawable/circelwarning" />

                <TextView
                    android:id="@+id/tvad2"
                    style="@style/advance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imgad3"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/san"
                    app:srcCompat="@drawable/circelwarning" />

                <TextView
                    android:id="@+id/tvad3"
                    style="@style/advance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#A4A4A4"
                android:gravity="center">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_span="2"
                    android:text=""></TextView>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="146dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvprice"
                    style="@style/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/datsan"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/datsan"
                    android:visibility="invisible" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView19"
                    style="@style/contentcm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/hour" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView20"
                    style="@style/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/comment" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textView21"
                    style="@style/contentcm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/contentcm" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>